<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/suits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flexboy"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/suit_heart"
            android:background="@color/colorYellow"/>

        <ImageView
            android:id="@+id/clubs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/suit_clubs"
            />

        <ImageView
            android:id="@+id/spade"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/suit_spade"
            />

        <ImageView
            android:id="@+id/diamond"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/suit_diamond"
            />


    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/suits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch" >

        <ImageView
            android:id="@+id/ace"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/ace_of_hearts"
            app:layout_alignSelf="center"/>


        <ImageView
            android:id="@+id/king"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/king_of_hearts" />

        <ImageView
            android:id="@+id/queen"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/queen_of_hearts" />

        <ImageView
            android:id="@+id/jack"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/jack_of_hearts" />


        <ImageView
            android:id="@+id/ten"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/ten_of_hearts" />


        <ImageView
            android:id="@+id/nine"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/nine_of_hearts" />

        <ImageView
            android:id="@+id/eight"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/eight_of_hearts" />

        <ImageView
            android:id="@+id/seven"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/seven_of_hearts" />

        <ImageView
            android:id="@+id/six"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/six_of_hearts" />

        <ImageView
            android:id="@+id/five"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/five_of_hearts" />

        <ImageView
            android:id="@+id/four"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/four_of_hearts" />


        <ImageView
            android:id="@+id/three"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/three_of_hearts" />


        <ImageView
            android:id="@+id/two"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/two_of_hearts" />

        <ImageView
            android:id="@+id/cardback"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/card_selected"
            android:src="@drawable/card_back_default" />

    </com.google.android.flexbox.FlexboxLayout>


</androidx.constraintlayout.widget.ConstraintLayout>