<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokerHandBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.PokerHandBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PokerHandBuddy.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!--  Menu text color   -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>

    </style>

    <style name="Theme.PokerHandBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>